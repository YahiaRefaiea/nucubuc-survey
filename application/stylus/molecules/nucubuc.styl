nucubuc-width= baseline*3
nucubuc-origin= nucubuc-width*2.3

symbol(a, b, c)
  top: unit(a, px)
  left: unit(b, px)
  background-color: c
symbolRotate(min, max)
  delay= 0
  for a in min..max
    delay= (delay+step)*pattern
    &:nth-child({a})
      animation: rotate+a (duration*3) easing unit(delay, 's') infinite
      @keyframes rotate{a}
        100%
          transform: rotate(360deg)

#nucubuc
  position: absolute
  top: 50%
  {align}: 50%
  width: nucubuc-width
  height: nucubuc-width
  margin-top: -(nucubuc-width/2)
  margin-left: -(nucubuc-width/2)
  hasTransition: 3
.waiting #nucubuc
  margin-left: -(nucubuc-origin/2)

#nucubuc div,
#nucubuc svg
  display: block
  position: absolute
  top: 0
  left: 0

//  SYMBOL
#nucubuc .symbol
  width: nucubuc-width
  height: nucubuc-width
  > div
    width: nucubuc-origin
    height: nucubuc-width
    animation: none
    > div
      width: 78px
      height: 78px
      border-radius: 50%
    &:nth-child(1) > div
      symbol: 0, 6, nuc4
    &:nth-child(2) > div
      symbol: 1, 0, nuc3
    &:nth-child(3) > div
      width: 74px
      height: 74px
      symbol: 6, 3, nuc2
    &:nth-child(4) > div
      symbol: 6, 5, nuc1
.waiting #nucubuc .symbol > div
  symbolRotate: 1, 4

//  SVGS
#nucubuc .svgs
  overflow: hidden
  width: nucubuc-width
  height: nucubuc-width
  svg
    fill: none
    stroke: #fff
    stroke-linecap: round
    stroke-linejoin: round
    stroke-miterlimit: 10
    .n
      stroke-width: 8

.spans > span
  display: inline-block
  opacity: 0
  hasTransition()
  cursor: default
.current .spans > span
  z-index: 1
  opacity: 1
  transform: translateY(0) !important
  cursor: auto
.current .spans:nth-child(1) > span
  multiTransition: 1 15 duration step
.current .spans:nth-child(2) > span
  multiTransition: 1 15 duration step*2

.h1.spans > span
  transform: translateY(heading1-height)
  &:not(:last-child)
    margin-{align-alt}: 8px

.h2.spans > span
  transform: translateY(baseline)
  &:not(:last-child)
    margin-{align-alt}: 4px
